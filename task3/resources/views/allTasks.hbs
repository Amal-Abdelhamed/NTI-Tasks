{{>header}}
{{>nav}}
<section class="container my-5">
    <div class="d-flex justify-content-between">
        <a href="/add" class="btn btn-primary mx-3">Add</a>
            <div class="input-group mb-3">
  <div class="input-group-prepend">
    <a class="btn btn-outline-secondary" href="/searchLogic" type="button">Search</a>
  </div>
  <input type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
</div>
                    <a href="/deleteAllLogic" class="btn btn-danger mx-3">Delete all</a>
    </div>
    <table class="table table-light my-5">
        <thead class="">
                <tr class="text-center">
                    <td>Id</td>
                    <td>Title</td>
                    <td>content</td>
                    <td>Due date</td>
                    <td>Status</td>
                    <td>Action</td>
                </tr>
        </thead>
        <tbody>
            {{#if hasData}}
            {{#each allTasks}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{dueDate}}</td>
                <td>{{status}}</td>
                <td class="text-center">
                    <a href="/single/{{id}}" class="btn btn-primary mx-3">show</a>
                    <a href="/edit/{{id}}" class="btn btn-warning mx-3">edit</a>
                    <a href="/delete/{{id}}" class="btn btn-danger mx-3">delete</a>
                </td>
            </tr>
            {{/each}}
            {{else}}
<tr class="table-danger">
                <td colspan="6" class="text-center">No Tasks yet</td>
            </tr>            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}
