{{>header}}
{{>nav}}
<section class="container my-5">
    <div class="d-flex justify-content-between mb-4">
        <a href="/add" class="btn btn-primary">Add</a>
            <div class="input-group mx-5">
                <div class="input-group-prepend">
                    <a class="btn btn-outline-secondary" href="/searchLogic" type="button">Search</a>
                </div>
                <input type="text" class="form-control"  aria-describedby="basic-addon1">
                </div>
                    <a href="/delAllLogic" class="btn btn-danger text-nowrap">Delete all</a>
    </div>
    <table class="table table-light my-5">
        <thead class="fw-bold">
                <tr class="text-center">
                    <td>Id</td>
                    <td>Title</td>
                    <td>content</td>
                    <td>Due date</td>
                    <td>Status</td>
                    <td>Action</td>
                </tr>
        </thead>
        <tbody>
            {{#if hasData}}
            {{#each allTasks}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{dueDate}}</td>
                <td>{{status}}</td>
                <td class="text-center">
                    <a href="/show/{{id}}" class="btn btn-primary mx-3">show</a>
                    <a href="/edit/{{id}}" class="btn btn-warning mx-3">edit</a>
                    <a href="/delSingleLogic/{{id}}" class="btn btn-danger mx-3">delete</a>
                    <a href="/activate/{{id}}" class="btn btn-success mx-3">activate</a>

                </td>
            </tr>
            {{/each}}
            {{else}}
<tr class="table-danger">
                <td colspan="6" class="text-center">No Tasks yet</td>
            </tr>            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}
